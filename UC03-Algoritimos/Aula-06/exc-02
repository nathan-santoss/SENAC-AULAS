programa {

  real codigoDeBarras
  cadeia emissor
  cadeia beneficiario
  real pagamentoValor
  logico decisaoEnvio
  cadeia dataCodigo

  funcao inicio() {
    
    escreva("Digite o código de barras para o pagamento desejado ")
    leia(codigoDeBarras)
 
    escreva("\n", " Agora digite a data de vencimento do boleto ")
    leia(dataCodigo)
    escreva("\n", " O boleto digitado é válido para pagamento, agora digite o nome e valor para finalizar ")
    escreva("\n", " Quem vai receber? ")
    leia(beneficiario)
    escreva("\n", " Valor do pagamento: ")
    leia(pagamentoValor)


    escreva("\n",  "ATENÇÃO! CONFIRME OS DADOS DO BENEFICIÁRIO E DIGITE A SENHA PARA FINALIZAR ")
    escreva("\n", "BENEFICIÁRIO: " + beneficiario)
    escreva("\n", "VALOR A PAGAR: " + pagamentoValor)
    escreva("\n", "A data de vencimento é até:  " + dataCodigo)


    escreva("\n", "[Y] = Confirmo o envio", "\n", "[N] = Não enviar")
    escreva("\n", "Confirmar envio?  ")
    
    
  }
}
